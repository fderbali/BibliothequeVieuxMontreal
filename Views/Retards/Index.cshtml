@model IEnumerable<BibliothequeVieuxMontreal.Models.Retard>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des retards</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdLivre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nbjour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLivre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nbjour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePret)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
